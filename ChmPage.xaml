            </DockPanel>
            <Button Content="{Binding ElementName=Window, Path=Strings.Reset}" Height="25" Margin="250,5,5,5" Style="{StaticResource NormalButton}" Click="Reset_Click"></Button>
        </StackPanel>
    </Grid>
</UserControl>
